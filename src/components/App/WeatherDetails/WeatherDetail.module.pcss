#details {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    grid-template-rows: auto;
    padding: 30px 0 20px 0;
    gap: 30px 50px;
}

.detail {
    font-size: 1.1rem;

    :nth-child(n) {
        display: flex;
        flex-direction: column;
        gap: 10px;
        align-items: center;
        justify-content: center;
        text-align: center;
    }
}